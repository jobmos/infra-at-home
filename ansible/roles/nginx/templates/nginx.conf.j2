events {
    worker_connections 1024;
}

http {
    server {
        listen 80;
        server_name {{ prometheus_dns_subdomain }}.{{ dns_domain }};
        
        location / {
            proxy_pass http://{{ ansible_host }}:{{ prometheus_port }};
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }

    server {
        listen 80;
        server_name {{ pihole_dns_subdomain }}.{{ dns_domain }};

        location / {
            proxy_pass http://{{ ansible_host }}:{{ pihole_web_port }}/;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            # Important for Pi-hole admin interface
            proxy_set_header X-Forwarded-Host $host;
            proxy_redirect off;
        }
    }
}